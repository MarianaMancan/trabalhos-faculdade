#include<iostream>
#include<stdlib.h>
#include <conio.h>
#include <windows.h>
void gotoxy(int x,int y)
{     SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),(COORD){x-1,y-1}); }

void forca(int estado)
	{if(estado==0){
		printf("-----------");
		printf("\n|         |");
		printf("\n|");
		printf("\n|");
		printf("\n|");
		printf("\n|");
		printf("\n-");
	}else if(estado==1){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|");
		printf("\n|");
		printf("\n|");
		printf("\n-");
		
	}else if(estado==2){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|         |");
		printf("\n|");
		printf("\n|");
		printf("\n-");	
	}else if(estado==3){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|        -|");
		printf("\n|");
		printf("\n|");
		printf("\n-");	
    }else if(estado==4){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|        -|-");
		printf("\n|");
		printf("\n|");
		printf("\n-");	
	}else if(estado==5){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|        -|-");
		printf("\n|        /");
		printf("\n|");
		printf("\n-");	
	}else if(estado==6){
		printf("-----------");
		printf("\n|         |");
		printf("\n|         0");
		printf("\n|        -|-");
		printf("\n|        / \\");
		printf("\n|");
		printf("\n|    Perdeu o jogo!");
		printf("\n-");	
	}
}
 main(){
 	char p_secreta[100];
 	gotoxy(20,3);
 	printf("JOGO DA FORCA:");
 	printf("\n");
 	int erros=0;
 	gotoxy(20,4);
 	printf("Jogador 1:");
 	gotoxy(20,5);
 	printf("Informe a palavra secreta: \n");
 	gets(p_secreta);

	
}
